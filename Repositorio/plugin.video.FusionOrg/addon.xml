<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.FusionOrg" name="Fusion Org"
	version="0.64" provider-name="Team-Fusion">
	<requires>
		<import addon="xbmc.python" version="2.25.0" />
		<import addon="plugin.video.youtube" version="6.6.0" />
		<import addon="script.module.requests" version="2.22.0" />
		<import addon="script.module.urlresolver" version="5.0.54" />
		<import addon="script.module.resolveurl" version="5.0.38"
			optional="true" />
		<import addon="script.module.urllib3" version="1.25.6" />
		<import addon="script.trakt" version="3.2.4" optional="true" />
	</requires>
	<extension point="xbmc.python.pluginsource"
		library="default.py">
		<provides>video</provides>
	</extension>
	
	<extension point="xbmc.addon.repository" name="Fusion.org">
		<info>https://repositorio.fusionorg.net/addons.xml</info>
		<checksum>https://repositorio.fusionorg.net/addons.xml.md5</checksum>
		<datadir zip="true">https://repositorio.fusionorg.net/</datadir>
    </extension>
	
	<extension point="xbmc.addon.metadata">
